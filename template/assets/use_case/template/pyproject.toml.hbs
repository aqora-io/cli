[project]
name = "submission"
version = "0.1.0"
requires-python = ">={{ python_version }}"

# You can add dependencies with `aqora add`
dependencies = []

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.sdist]
include = ["submission"]

[tool.aqora]
type = "submission"
competition = "{{ competition }}"

[tool.aqora.refs]
solution = { path = "submission.notebook", notebook = true }
