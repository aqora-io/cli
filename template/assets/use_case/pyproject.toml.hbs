[project]
name = "use-case"
version = "0.1.0"
requires-python = ">={{ python_version }}"

dependencies = ["aqora-cli>={{ cli_version }}"]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.sdist]
include = ["use_case"]
exclude = ["data", "template"]

[tool.aqora]
type = "use_case"
data = "data"
competition = "{{ competition }}"
template = "template"
generator = "use_case.run.generator"
aggregator = "use_case.run.aggregate"

[[tool.aqora.layers]]
name = "solution"
transform = "$solution"
